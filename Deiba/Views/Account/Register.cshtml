@model RegisterViewModel

<div class="container" style="margin-top:100px;margin-bottom:100px;direction:rtl;text-align:right">
    <div class="row">
        <div class="col-md-8">
            <form style="font-family:Tahoma;font-size:20px" asp-action="Registerconfirm" asp-controller="Account">
                <div class="form-group">
                    <label> نام</label>
                    <input  class="form-control"   asp-for="Name">

                </div>
                <div class="form-group">
                    <label >نام خانوادگی</label>
                    <input  class="form-control"   asp-for="Family">

                </div>

                <div class="form-group">
                    <label>آدرس ایمیل</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل را وارد کنید">

                </div>
                <div class="form-group">
                    <label >پسورد</label>
                    <input type="password" class="form-control"  asp-for="Password">

                </div>

                <div class="form-group">
                    <label >تکرار پسورد </label>
                    <input type="password" class="form-control"  asp-for="RePassword">
                </div>

                <button type="submit" class="btn btn-primary">ثبت نام</button>
            </form>
        </div>
    </div>
</div>
