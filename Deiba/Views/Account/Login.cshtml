@model LoginViewModel
<div class="container" style="margin-top:100px;margin-bottom:100px;direction:rtl;text-align:right">
    <div class="row">
        <div class="col-md-8">
            <form  asp-action="Loginconfirm" asp-controller="Account" style="font-family:Tahoma;font-size:20px">
                <div class="form-group">
                    <label for="exampleInputEmail1">ایمیل</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
                    
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">پسورد</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                </div>
                <div class="form-group form-check"style="direction:ltr">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="Rememberme" >
                    <label class="form-check-label" for="exampleCheck1">مرا به خاطر بسپار</label>
                </div>
                <button type="submit" class="btn btn-primary">ورود</button>
            </form>
        </div>
    </div>
</div>