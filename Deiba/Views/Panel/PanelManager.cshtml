
@model ProductViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <title>PanelManager</title>
</head>
<body>
    <!------------------------------------------------nav-------------------------->

    <ul class="nav nav-pills" style="background-color:black;direction:rtl">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index" asp-controller="Home">خانه</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="InsertBarand" asp-controller="Panel">برند ها</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Lstproduct" asp-controller="Panel">لیست کالا ها</a>
        </li>
       



    </ul>
    
   


    <!------------------------------------------------End nav-------------------------->
    <section class="contact-section">
        <div class="container" style="margin-top:60px">
            <div class="row">
                <div class="col-md-4">

                    <div>
                        <form enctype="multipart/form-data" method="post" asp-action="Productconfirm" asp-controller="Panel">
                            <div class="form-group">
                                <label>نام کالا</label>
                                <input class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>مدل</label>
                                <input class="form-control" asp-for="Mod">
                            </div>

                            <div class="form-group">
                                <label>قیمت</label>
                                <input class="form-control" asp-for="Price">
                            </div>

                            <div class="form-group">
                                <label>توضیحات</label>
                                <textarea class="form-control" aria-label="With textarea" asp-for="Title"></textarea>
                            </div>


                            <div class="form-group">
                                <label for="exampleFormControlFile1">عکس کالا</label>
                                <input type="file" class="form-control-file" id="exampleFormControlFile1" asp-for="Img">
                            </div>
                            <div class="form-group">
                                <select class="form-control" asp-for="Barandid">
                                    @foreach (var item in ViewData["Barands"] as List<Barand>)
                                    {
                                        <option value="@item.Id">@item.Name</option>

                                    }

                                </select>

                            </div>
                            <button type="submit" class="btn btn-primary ">Submit</button>
                        </form>
                    </div>
                    
                </div>
                <div style="margin-left:100px;margin-top:30px">
   

                </div>
            </div>
            
           
        </div>
    </section>

</body>
</html>







               




