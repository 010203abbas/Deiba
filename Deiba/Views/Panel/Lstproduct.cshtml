
@{
    ViewData["Title"] = "Lstproduct";
}

<h1 style="text-align:center;color:blueviolet;margin-top:100px">لیست محصولات</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr style="background-color:mediumspringgreen">
                        <th scope="col">#</th>
                        <th scope="col">نام</th>
                        <th scope="col">مدل</th>
                        <th scope="col">توضیحات</th>
                        <th scope="col">قیمت</th>
                        <th scope="col">عکس</th>
                        <th scope="col">update</th>
                        <th scope="col">delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewData["lst"] as List<Product>)
                    {
                        <tr>

                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Mod</td>
                            <td>@item.Title</td>
                            <td>@item.Price</td>
                            <td><img style="width:200px;height:100px" src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.Img)}")" alt="Laptop"></td>
                            <td><a asp-action="Update"asp-controller="Panel"asp-route-Id="@item.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Update</a></td>
                            <td><a asp-action="Delete"asp-controller="Panel"asp-route-Id="@item.Id" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Delete</a></td>
                        </tr>

                    }


                    


                </tbody>
            </table>
        </div>
    </div>
</div>